
struct Node* intersectionOfLists(struct Node* head1, struct Node* head2)
{
    if(head1 == NULL || head2 == NULL)
    {
        return NULL;
    }
    if(head1 -> data < head2 -> data)
    {
        return intersectionOfLists(head1 -> next , head2);
    }
    if(head1 -> data > head2 -> data)
    {
        return intersectionOfLists(head1  , head2 -> next);
    }
   struct Node* temp = (struct Node*)malloc(sizeof(struct Node));
   temp -> data = head1 -> data;
   temp-> next = intersectionOfLists(head1 -> next  , head2 -> next);
   return temp;
}



struct Node* intersectionOfLists(struct Node* head1, struct Node* head2)
{
    if(head1 == NULL || head2 == NULL)
    {
        return NULL;
    }
    
    struct Node* lastPtr = NULL;
    
    while(head1!= NULL && head2!= NULL)
    {
       if(head1 -> data < head2 -> data)
           head1 = head1 -> next;
       else
          if(head1 -> data > head2 -> data)
             head2 = head2 -> next;
          else
            if(lastPtr == NULL){
              struct Node* temp = (struct Node*)malloc(sizeof(struct Node));
              temp -> data = head1 -> data;
              head1 = head1 -> next;
              head2 = head2 -> next;
              temp -> next = NULL;
              lastPtr = temp;
            }
           else{
              struct Node* temp = (struct Node*)malloc(sizeof(struct Node));
              temp -> data = head1 -> data;
              head1 = head1 -> next;
              head2 = head2 -> next;
              temp -> next = NULL;
              
              lastPtr -> next = temp;
              lastPtr = temp;
           }
          
    }
    return lastPtr;
}
